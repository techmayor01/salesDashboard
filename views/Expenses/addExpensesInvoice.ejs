<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head') %>
  <body>
    <div class="relative flex flex-col min-h-screen bg-slate-200">
      <%- include ('../partials/header') %>

      <div class="flex flex-row">
        <div class="w-[220px] p-4"><%- include ('../partials/sidebar') %></div>
        <main
          class="cal relative top-16 p-4 overflow-auto"
          style="width: calc(100% - 220px)">
          <h2 class="text-xl font-semibold text-gray-800 mb-4">
            Add Expenses
          </h2>
          <div class="bg-white px-6 py-2">
            <form
              action="/addEpensesInvoice"
              method="post"
              class="grid grid-cols-2 gap-4 items-center text-sm">
              <div class="flex flex-col gap-4">
                <!-- Select Supplier -->
                <div class="flex gap-3 items-top">
                  <label class="w-52 text-gray-700"
                    >expense Type <span class="text-red-500">*</span></label
                  >
                  <select
                    class="w-full text-gray-600 border-gray-300 border border-gray-200 px-2 py-1 focus:ring focus:ring-blue-300">
                    <option>Select Expense</option>
                  </select>
                </div>
               
                <!-- Date Picker -->
                <div class="flex gap-3 items-top">
                  <label class="w-52 text-gray-700"
                    >Date <span class="text-red-500">*</span></label
                  >
                  <input
                    type="date"
                    class="w-full text-gray-600 border-gray-300 border border-gray-200 px-2 py-1 focus:ring focus:ring-blue-300" />
                </div>
              </div>
            </form>
          </div>
          <div class="bg-white p-5">
            <table class="w-full border-collapse border border-gray-200">
              <thead>
                <tr class="text-left text-gray-700">
                  <th class="p-2 border border-gray-200">
                    Item Information <span class="text-red-500">*</span>
                  </th>
                  <th class="p-2 border border-gray-200">
                    Quantity <span class="text-red-500">*</span>
                  </th>
                  <th class="p-2 border border-gray-200">
                    Rate <span class="text-red-500">*</span>
                  </th>
                  <th class="p-2 border border-gray-200">Total</th>
                  <th class="p-2 border border-gray-200 text-center">Action</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="p-2 border border-gray-200">
                    <input
                      type="text"
                      placeholder="Item Name"
                      class="w-full border border-gray-200 px-2 py-1" />
                  </td>
                  <td class="p-2 border border-gray-200">
                    <input
                      type="number"
                      value="0"
                      class="w-full border border-gray-200 px-2 py-1" />
                  </td>
                  <td class="p-2 border border-gray-200">
                    <input
                      type="number"
                      value="0.00"
                      class="w-full border border-gray-200 px-2 py-1" />
                  </td>
                  <td class="p-2 border border-gray-200">
                    <input
                      type="text"
                      value="0.00"
                      class="w-full border border-gray-200 px-2 py-1 bg-gray-100"
                      readonly />
                  </td>
                  <td class="p-2 border border-gray-200 text-center">
                    <button class="bg-red-500 text-white px-3 py-1">
                      Delete
                    </button>
                  </td>
                </tr>
                <tr>
                  
                  <td colspan="3" class="p-2 text-right border border-gray-200">Grand Total:</td>
                  <td class="p-2 border border-gray-200">
                    <input
                      type="number"
                      value="0.00"
                      class="w-full border border-gray-200 px-2 py-1" />
                  </td>
                  <td class="p-2 border border-gray-200"></td>
                </tr>
                <!-- Summary Section -->
                <tr>
                  <td  class="p-2 border border-gray-200 text-center">
                    <button class="bg-teal-500 text-white  px-4 py-1">
                      Add New Item
                    </button>
                  </td>
                  
                  <td colspan="2" class="p-2 text-right border border-gray-200">Paid Amount:</td>
                  <td class="p-2 border border-gray-200">
                    <input
                      type="number"
                      value="0.00"
                      class="w-full border border-gray-200 px-2 py-1" />
                  </td>
                  <td></td>
                </tr>
                <!-- Submit & Full Paid Buttons -->
                <tr>
                  <td class="p-2 border border-gray-200">
                    <div class="mt-4 flex gap-4 items-center justify-center">
                      <button class="bg-green-500 text-white px-4 py-1">
                        Submit
                      </button>
                      <button
                        class="bg-orange-500 text-white px-4 py-1">
                        Full Paid
                      </button>
                    </div>
                  </td>
                  
                  <td colspan="2" class="p-2 text-right border border-gray-200">Due:</td>
                  <td class="p-2 border border-gray-200">
                    <input
                      type="number"
                      value="0.00"
                      class="w-full border border-gray-200 px-2 py-1" />
                  </td>
                  <td></td>
                </tr>
              </tbody>
            </table>

            <!-- Add Item Button -->
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
