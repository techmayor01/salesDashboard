<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body class="bg-slate-100">
     <div class="relative flex flex-col min-h-screen bg-slate-200">
      <%- include ('../partials/header') %>

      <div class="flex flex-row">
        <div class="lg:w-[220px] lg:p-4">
          <%- include ('../partials/sidebar') %>
        </div>
        <main
          class="relative top-16 p-4 overflow-auto lg:w-[calc(100%-220px)] w-full bg-slate-200">
          <!-- Page Header -->
          <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Add Product</h1>
            <p class="text-sm text-gray-500">
              Upload products using CSV or add product images below.
            </p>
          </div>

          <!-- Form Card -->
          <form
            action="/addProduct"
            method="post"
            class="bg-white shadow-lg rounded-xl p-6 space-y-8"
            enctype="multipart/form-data"
          >
            <!-- CSV Instructions -->
            <div>
              <h2 class="text-xl font-semibold text-gray-700 mb-1">
                Add Product CSV
              </h2>
              <p class="text-sm text-gray-500 leading-relaxed">
                Use this form to upload products through CSV. Download the sample CSV and add info without changing column order.
                Categories, Warehouse, Unit Code, and Supplier IDs can be selected below. Add the image name in the CSV and upload images separately.
              </p>
            </div>

            <!-- Upload CSV & Images Section -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <!-- Upload CSV -->
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >CSV File <span class="text-red-500">*</span></label
                  >
                  <input
                    type="file"
                    name="csvFile"
                    class="w-full border border-gray-300 rounded-md p-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400"
                  />
                </div>
                <button
                  type="submit"
                  class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-700 transition"
                >
                  Upload Product CSV
                </button>
              </div>

              <!-- Upload Images -->
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >Product Images <span class="text-red-500">*</span></label
                  >
                  <input
                    type="file"
                    name="image"
                    multiple
                    class="w-full border border-gray-300 rounded-md p-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400"
                  />
                </div>
                <button
                  type="submit"
                  class="bg-green-600 text-white px-4 py-2 rounded-md text-sm hover:bg-green-700 transition"
                >
                  Upload Images
                </button>
              </div>
            </div>

            <!-- Select IDs Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-6">
              <!-- Category -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >Category ID</label
                >
                <select
                  name="category"
                  class="w-full border border-gray-300 rounded-md p-2 text-sm shadow-sm text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
                >
                  <option disabled selected>Select Category</option>
                  <option value="Category 1">Category 1</option>
                  <option value="Category 2">Category 2</option>
                </select>
              </div>

              <!-- Warehouse -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >Warehouse ID</label
                >
                <select
                  name="warehouseId"
                  class="w-full border border-gray-300 rounded-md p-2 text-sm shadow-sm text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
                >
                  <option disabled selected>Select Warehouse</option>
                  <option value="Warehouse 1">Warehouse 1</option>
                  <option value="Warehouse 2">Warehouse 2</option>
                </select>
              </div>

              <!-- Unit Code -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >Unit Code ID</label
                >
                <select
                  name="unitCode"
                  class="w-full border border-gray-300 rounded-md p-2 text-sm shadow-sm text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
                >
                  <option disabled selected>Select Unit Code</option>
                  <option value="Case">Cs = Case</option>
                  <option value="Dozen">Dz = Dozen</option>
                </select>
              </div>

              <!-- Supplier -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1"
                  >Supplier ID</label
                >
                <select
                  name="supplierId"
                  class="w-full border border-gray-300 rounded-md p-2 text-sm shadow-sm text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
                >
                  <option disabled selected>Select Supplier</option>
                  <option value="Supplier 1">Supplier 1</option>
                  <option value="Supplier 2">Supplier 2</option>
                </select>
              </div>
            </div>
          </form>
           <%- include ('../partials/footer') %>
        </main>
       
      </div>
    </div>
  </body>
</html>
