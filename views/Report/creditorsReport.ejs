<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head') %>
  <body>
    <div class="relative flex flex-col min-h-screen ">
      <%- include ('../partials/header') %>
    
      <div class="flex flex-row">
        <!-- Sidebar -->
        <div class="w-[220px] p-4 h-[100vh] bg-white shadow-md">
          <%- include ('../partials/sidebar') %>
        </div>
    
        <!-- Main Content -->
        <main class="relative top-16 p-6 overflow-auto" style="width: calc(100% - 220px)">
          <div class="flex flex-row justify-between items-center mb-6">
            <h1 class="text-2xl font-semibold text-gray-900">Creditors Report</h1>
          </div>
    
          <!-- Filters Section -->
          <div id="creditorsFilterBlock" class="mb-6 flex flex-wrap items-center gap-4 text-sm bg-white p-4 rounded-lg shadow-md">
            <input type="text" id="creditorInput" placeholder="Enter Creditor Name" class="input-field" />
    
            <p class="font-semibold text-gray-700">Date Range</p>
            <input type="date" id="startDate" class="input-field" />
    
            <span class="text-gray-500">to</span>
            <input type="date" id="endDate" class="input-field" />
    
            <button id="getCreditorsBtn" class="bg-blue-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-400">
              Get
            </button>
          </div>
    
          <!-- Creditors Table Section -->
          <div id="creditorsTableSection" class="hidden max-w-6xl mx-auto  p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Creditors Ledger</h2>
            <div class="overflow-x-auto">
              <table id="creditorsTable" class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-blue-50 text-blue-700">
                  <tr>
                    <th class="px-4 py-3 text-left font-semibold">Date</th>
                    <th class="px-4 py-3 text-left font-semibold">Creditor</th>
                    <th class="px-4 py-3 text-left font-semibold">Invoice No</th>
                    <th class="px-4 py-3 text-left font-semibold">Amount</th>
                    <th class="px-4 py-3 text-left font-semibold">Paid</th>
                    <th class="px-4 py-3 text-left font-semibold">Balance</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 text-gray-700">
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-4 py-3">2024-05-10</td>
                    <td class="px-4 py-3">Ajayi Ltd</td>
                    <td class="px-4 py-3">INV-045</td>
                    <td class="px-4 py-3">₦200,000</td>
                    <td class="px-4 py-3">₦150,000</td>
                    <td class="px-4 py-3">₦50,000</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
    
        </main>
      </div>
    </div>
    
    <!-- Styling Shortcuts -->
    <style>
      .input-field {
        @apply border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500;
      }
    </style>
    
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const getBtn = document.getElementById("getCreditorsBtn");
        const tableSection = document.getElementById("creditorsTableSection");
    
        getBtn.addEventListener("click", () => {
          tableSection.classList.remove("hidden");
        });
      });
    </script>
    
  </body>
</html>
