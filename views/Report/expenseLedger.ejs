<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head') %>
  <body>
    <div class="relative flex flex-col min-h-screen bg-slate-200">
      <%- include ('../partials/header') %>

      <div class="flex flex-row">
        <div class="w-[220px] p-4 h-[100vh]">
          <%- include ('../partials/sidebar') %>
        </div>
        <main
          class="cal relative top-16 p-4 overflow-auto"
          style="width: calc(100% - 220px)">
          <div class="flex flex-row justify-between items-center">
            <h1 class="text-2xl font-semibold">Expense Ledger</h1>
          </div>

          <!-- Table -->
          <div class="max-w-6xl mx-auto bg-white p-6">
            <!-- Table Title -->
            <h2 class="text-xl font-semibold text-gray-800 mb-4">
              Expense Ledger Data
            </h2>

            <!-- Date Range -->
            <div class="mb-6 flex flex-wrap items-center gap-4 text-sm">
              <p class="font-medium text-gray-700">Date Range</p>
              <input
                type="date"
                id="startDate"
                class="border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
              <span class="text-gray-500">to</span>
              <input
                type="date"
                id="endDate"
                class="border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
              <button
                class="bg-blue-600 text-white px-4 py-2 rounded-md shadow hover:bg-blue-700 transition duration-300">
                Get
              </button>
            </div>

            <!-- Table -->
            <div
              class="overflow-x-auto rounded-md shadow-sm border border-gray-200">
              <table
                id="suppliersTable"
                class="min-w-full divide-y divide-gray-200 text-sm bg-white">
                <thead
                  class="bg-blue-100 text-blue-800 text-xs uppercase font-semibold tracking-wider">
                  <tr>
                    <th class="px-4 py-3 text-left">No</th>
                    <th class="px-4 py-3 text-left">Invoice No</th>
                    <th class="px-4 py-3 text-left">Created By, Name</th>
                    <th class="px-4 py-3 text-left">Date</th>
                    <th class="px-4 py-3 text-right">Total Amount</th>
                    <th class="px-4 py-3 text-right">Paid Amount</th>
                    <th class="px-4 py-3 text-right">Remaining Amount</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 text-gray-700">
                  <tr class="hover:bg-gray-50">
                    <td
                      colspan="7"
                      class="text-center px-4 py-6 text-gray-500 italic">
                      No data available in table
                    </td>
                  </tr>
                </tbody>
                <tfoot class="bg-gray-50">
                  <tr class="text-gray-700 font-semibold border-t">
                    <td
                      colspan="3"
                      class="px-4 py-3 text-left"></td>
                    <td class="px-4 py-3 text-left">Total</td>
                    <td class="px-4 py-3 text-right">₦0</td>
                    <td class="px-4 py-3 text-right">₦0</td>
                    <td class="px-4 py-3 text-right">₦0</td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </main>
      </div>
    </div>
    <script>
      $(document).ready(function () {
        $("#suppliersTable").DataTable({
          dom: "Bfrtip",
          buttons: ["copy", "excel", "csv", "pdf", "print"],
        });
      });
    </script>
  </body>
</html>
