            <!-- Customer Input -->
            <input type="text" id="customerInput" placeholder="Enter Customer Name" class="hidden border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500" />

            <button id="getLedgerBtn" class="bg-blue-600 text-white px-4 py-2 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-400">Get</button>
          </div>

