<!-- @format -->

<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head') %>

  <body>
    <div class="relative flex flex-col min-h-screen bg-slate-200">
      <%- include ('../partials/header') %>

        <div class="flex flex-row">
          <div class="lg:w-[220px] lg:p-4">
            <%- include ('../partials/sidebar') %>
          </div>
          <main class="relative top-16 p-4 overflow-auto lg:w-[calc(100%-220px)] w-full bg-slate-200">
            <div class=" ">
              <!-- Title -->
              <div class="mb-2">
                <h1 class="text-3xl font-semibold text-gray-800">Add Supplier</h1>
                <p class="text-sm text-gray-500 mt-1">
                  Use this form to add suppliers to your database.
                </p>
              </div>

              <!-- Form -->
              <form action="/addSupplier" method="post"
                class="bg-white rounded-xl shadow p-6 space-y-6 border border-gray-100">
                <!-- Supplier Name -->
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 items-center">
                  <label for="supplier" class="text-gray-700 font-medium">Supplier <span
                      class="text-red-500">*</span></label>
                  <input type="text" id="supplier" name="supplier" placeholder="Enter supplier name"
                    class="sm:col-span-2 px-4 py-2 border rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <!-- Contact Person -->
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 items-center">
                  <label for="name" class="text-gray-700 font-medium">Contact Person <span
                      class="text-red-500">*</span></label>
                  <input type="text" id="name" name="contact_person" placeholder="Enter contact name"
                    class="sm:col-span-2 px-4 py-2 border rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <!-- Email -->
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 items-center">
                  <label for="email" class="text-gray-700 font-medium">Email</label>
                  <input type="email" id="email" name="email" placeholder="Enter email"
                    class="sm:col-span-2 px-4 py-2 border rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <!-- Phone -->
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 items-center">
                  <label for="number" class="text-gray-700 font-medium">Phone</label>
                  <input type="tel" id="number" name="phone" placeholder="Enter phone number"
                    class="sm:col-span-2 px-4 py-2 border rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <!-- Address -->
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 items-start">
                  <label for="address" class="text-gray-700 font-medium">Address</label>
                  <textarea id="address" name="address" rows="3" placeholder="Enter address"
                    class="sm:col-span-2 px-4 py-2 border rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                </div>

                <!-- Submit Button -->
                <div class="text-center pt-4">
                  <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md text-sm font-semibold transition duration-200">
                    Add Supplier
                  </button>
                </div>
              </form>
              <%- include ('../partials/footer') %>
            </div>

          </main>
        </div>
    </div>
  </body>

</html>