<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head') %>
  <body>
    <div class="relative flex flex-col min-h-screen bg-slate-200">
      <%- include ('../partials/header') %>

      <div class="flex flex-row">
        <div class="w-[220px] p-4"><%- include ('../partials/sidebar') %></div>
        <main
          class="cal relative top-16 p-4 overflow-auto"
          style="width: calc(100% - 220px)">
          <div class="flex flex-row justify-between items-center">
            <h1 class="text-2xl font-semibold">Transaction History</h1>
          </div>

          <!-- Table -->
          <div class="max-w-6xl mx-auto bg-white p-6">
            <!-- Table Title -->
            <h2 class="text-xl font-semibold text-gray-800 mb-4">
              Exporting Transaction History Data
            </h2>

            <!-- Table -->
            <div class="overflow-x-auto">
              <table
              id="suppliersTable"
              class="stripe hover w-full text-left text-sm border-collapse">
              <thead>
                <tr class="font-semibold text-gray-700 border border-gray-200">
                  <th class="p-3 border border-gray-200">No</th>
                  <th class="p-3 border border-gray-200">Customers</th>
                  <th class="p-3 border border-gray-200">Mobile</th>
                  <th class="p-3 border border-gray-200">Email</th>
                  <th class="p-3 border border-gray-200">Date</th>
                  <th class="p-3 border border-gray-200">Total Amount</th>
                  <th class="p-3 border border-gray-200">Paid Amount</th>
                  <th class="p-3 border border-gray-200">Remaining Amount</th>
                </tr>
              </thead>
              <tbody>
                <% if (customers.length > 0) { %>
                  <% customers.forEach((customer, index) => { %>
                    <% customer.transactions.forEach((transaction, tIndex) => { %> <!-- Loop through each customer's transactions -->
                      <tr class="border-t hover:bg-gray-50 even:bg-gray-50 transition">
                        <td class="p-3 border border-gray-200"><%= index + 1 %>.<%= tIndex + 1 %></td> <!-- Displaying customer and transaction number -->
                        <td class="p-3 border border-gray-200"><%= customer.customer_name %></td>
                        <td class="p-3 border border-gray-200"><%= customer.mobile %></td>
                        <td class="p-3 border border-gray-200"><%= customer.email %></td>
                        
                        <!-- Check for valid date -->
                        <td class="p-3 border border-gray-200">
                          <%= new Date(customer.createdAt).toISOString().slice(0, 10) %>
                        </td>
              
                        <td class="p-3 border border-gray-200">₦ <%= transaction.total ?? 0 %></td> <!-- Total amount in the transaction -->
                        <td class="p-3 border border-gray-200">₦ <%= transaction.paid_amount ?? 0 %></td> <!-- Paid amount -->
                        <td class="p-3 border border-gray-200">₦ <%= transaction.remaining_amount ?? 0 %></td> <!-- Remaining balance -->
                      </tr>
                    <% }) %> <!-- End of transaction loop -->
                  <% }) %> <!-- End of customer loop -->
                <% } else { %>
                  <tr>
                    <td colspan="8" class="text-center text-gray-500 py-4">
                      No data available in table
                    </td>
                  </tr>
                <% } %>
              </tbody>
              
            </table>
            
            </div>
          </div>
        </main>
      </div>
    </div>
    <script>
      $(document).ready(function () {
        $("#suppliersTable").DataTable({
          dom: "Bfrtip",
          buttons: ["copy", "excel", "csv", "pdf", "print"],
        });
      });
    </script>
  </body>
</html>
